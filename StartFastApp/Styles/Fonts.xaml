<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Fonts  -->
    <FontFamily x:Key="Ubuntu-Bold">pack://application;,,,/Fonts/Unbuntu-B.ttf#Unbutu-B</FontFamily>
    <FontFamily x:Key="Ubuntu-Bold-Italic">pack://application;,,,/Fonts/Ubuntu-BI.ttf#Unbutu-BI</FontFamily>
    <FontFamily x:Key="Ubuntu-Condensed">pack://application;,,,/Fonts/Ubuntu-C.ttf#Unbutu-C</FontFamily>
    <FontFamily x:Key="Ubuntu-Light">pack://application;,,,/Fonts/Ubuntu-L.ttf#Unbutu-L</FontFamily>
    <FontFamily x:Key="Ubuntu-Light-Italic">pack://application;,,,/Fonts/Ubuntu-LI.ttf#Unbutu-LI</FontFamily>
    <FontFamily x:Key="Ubuntu-Medium">pack://application;,,,/Fonts/Ubuntu-M.ttf#Unbutu-M</FontFamily>
    <FontFamily x:Key="Ubuntu-Medium-Italic">pack://application;,,,/Fonts/Ubuntu-MI.ttf#Unbutu-MI</FontFamily>

    <!--  Default Font style  -->
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource Ubuntu-Medium}" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type Button}" />
    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type Label}" />
    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type TextBox}" />
    <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type ListView}" />

</ResourceDictionary>